<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <tLinks</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="/js/admin.js"></script>
    <script type="text/javascript" src="/js/links.js"></script>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <h1>Links</h1>
    <div id="result"></div>
    <table id="links">
      <thead>
        <tr>
          <th>Short URI</th>
          <th>Destination URL</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
         <tr id="new-link">
          <input type="hidden" id="id" />
          <td><input type="text" id="code" /></td>
          <td><input type="text" id="url" /></td>
          <td><button id="btn-add">Add</button>&nbsp;<button id="btn-cancel">Cancel</button></td>
        </tr>
    <% links && links.forEach(function(link, idx){
      %>
        <tr class='link'>
          <td class='code'><%=link.code%></td>
          <td class='url'><%=link.url%></td>
          <td class='buttons'><button class="btn-del" data-id="<%=link.id%>">Delete</button>&nbsp;<button class="btn-edit" data-id='<%=link.id%>'>Edit</button></td>
        </tr>

    <%}); %>
       
      </tbody>
    </table>
  </body>
</html>